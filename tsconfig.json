{
	"compilerOptions": {
		"target": "ES2017",
		"incremental": true,
		"module": "commonjs",
		"declaration": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"outDir": "dist"
	},
	"include": [
		"src"
	]
}
